<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefWidth="1000.0" xmlns="http://javafx.com/javafx/21.0.7"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MovieDetailsController"
            stylesheets="@styles.css">
   <top>
      <HBox prefHeight="60.0" prefWidth="1000.0" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" 
                    styleClass="back-button" text="←" onAction="#handleBackClick" />
            <Label fx:id="titleLabel" prefHeight="40.0" prefWidth="700.0" styleClass="details-title" 
                   text="Movie Details">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="themeToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" 
                    styleClass="theme-toggle-button" text="🌙" onAction="#handleThemeToggle" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="details-scroll-pane">
        <content>
          <HBox spacing="30.0" styleClass="details-content">
            <children>
                <!-- Left side - Poster and basic info -->
                <VBox spacing="20.0" prefWidth="300.0" styleClass="poster-section">
                    <children>
                        <ImageView fx:id="posterImageView" fitHeight="450.0" fitWidth="300.0" 
                                  pickOnBounds="true" preserveRatio="true" styleClass="details-poster" />
                        
                        <VBox spacing="10.0" styleClass="basic-info">
                            <children>
                                <Label fx:id="yearLabel" text="2024" styleClass="details-year" />
                                <Label fx:id="ratingLabel" text="★ 8.5" styleClass="details-rating" />
                                <Label fx:id="voteCountLabel" text="1234 votes" styleClass="details-votes" />
                                <Label fx:id="releaseDateLabel" text="Release Date: 2024-01-01" styleClass="details-release" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" top="20.0" bottom="20.0" />
                    </VBox.margin>
                </VBox>
                
                <!-- Right side - Detailed information -->
                <VBox spacing="20.0" prefWidth="650.0" styleClass="details-info">
                    <children>
                        <Label fx:id="movieTitleLabel" text="Movie Title" styleClass="movie-title-large" />
                        
                        <VBox spacing="10.0" styleClass="genres-section">
                            <children>
                                <Label text="Genres:" styleClass="section-label" />
                                <FlowPane fx:id="genresFlowPane" hgap="8.0" vgap="4.0" 
                                          prefWrapLength="600.0" />
                            </children>
                        </VBox>
                        
                        <VBox spacing="10.0" styleClass="overview-section">
                            <children>
                                <Label text="Overview:" styleClass="section-label" />
                                <TextArea fx:id="overviewTextArea" prefWidth="600.0"
                                         editable="false" wrapText="true" styleClass="overview-text" />
                            </children>
                        </VBox>
                        
                        <VBox spacing="10.0" styleClass="additional-info">
                            <children>
                                <Label text="Additional Information:" styleClass="section-label" />
                                <Label fx:id="movieIdLabel" text="Movie ID: 12345" styleClass="info-label" />
                                <Label fx:id="runtimeLabel" text="Runtime: 120 minutes" styleClass="info-label" />
                                <Label fx:id="languageLabel" text="Language: English" styleClass="info-label" />
                                <Label fx:id="budgetLabel" text="Budget: $50,000,000" styleClass="info-label" />
                                <Label fx:id="revenueLabel" text="Revenue: $200,000,000" styleClass="info-label" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets right="20.0" top="20.0" bottom="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
          </HBox>
        </content>
      </ScrollPane>
   </center>
</BorderPane> 