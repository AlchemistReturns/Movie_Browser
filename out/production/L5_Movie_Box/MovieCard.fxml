<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="400.0" prefWidth="200.0" styleClass="movie-card" 
            xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="MovieCardController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="8.0" AnchorPane.bottomAnchor="0.0" 
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fx:id="posterImageView" fitHeight="280.0" fitWidth="180.0" 
                          pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </ImageView>
                
                <VBox spacing="4.0" alignment="TOP_LEFT">
                    <children>
                        <Label fx:id="titleLabel" text="Movie Title" wrapText="true" 
                               styleClass="movie-title" />
                        
                        <Label fx:id="yearLabel" text="2024" styleClass="movie-year" />
                        
                        <FlowPane fx:id="genresFlowPane" hgap="4.0" vgap="2.0" 
                                  prefWrapLength="180.0" />
                        
                        <VBox spacing="2.0">
                            <children>
                                <Label fx:id="ratingLabel" text="â˜… 8.5" styleClass="movie-rating" />
                                <Label fx:id="voteCountLabel" text="1234 votes" styleClass="movie-votes" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="8.0" right="8.0" bottom="8.0" />
                    </VBox.margin>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox spacing="8.0" alignment="CENTER">
                    <children>
                        <Button fx:id="detailsButton" text="Details" styleClass="details-button" 
                                onAction="#handleDetailsClick" />
                        <Button fx:id="watchLaterButton" text="Watch Later" styleClass="watch-later-button" 
                                onAction="#handleWatchLaterClick" />
                    </children>
                    <VBox.margin>
                        <Insets left="8.0" right="8.0" bottom="8.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
